{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "chords-lsl-connector",
  "version": "0.2.1",
  "identifier": "com.upsidedownlabs.chords",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {

    "windows": [
      {
        "title": "Chords LSL Connector",
        "height":164,
        "width": 400,
        "transparent": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "visible": true,
        "closable": true,
        "minimizable": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "msi",
      "dmg",
      "rpm"
    ],
    "icon": [
      "icons/chords-logo.png",
      "icons/Chords-logo-128px.ico"
    ]
  }
}
